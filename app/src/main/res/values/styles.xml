<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#148073</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#000000</item>
        <item name="editTextStyle">@style/EditText.Light</item>
        <item name="android:listViewStyle">@style/ListViewStyle.Light</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#454343</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#CDCDCD</item>
        <item name="editTextStyle">@style/EditText.Dark</item>
        <item name="android:listViewStyle">@style/ListViewStyle.Dark</item>
        <item name="android:itemBackground">@color/niceGrey</item>
        <item name="android:itemTextAppearance">@style/ItemTextColor.Dark</item>
        <item name="floatingActionButtonStyle">@style/Fab.Dark</item>
    </style>

    <style name="ListViewStyle.Light" parent="android:style/Widget.ListView">
        <item name="android:background">@color/white</item>
        <item name="android:divider">#4F5958</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="ListViewStyle.Dark" parent="android:style/Widget.ListView">
        <item name="android:background">@color/black</item>
        <item name="android:divider">@color/white</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="EditText.Light" parent="android:style/Widget.EditText">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EditText.Dark" parent="android:style/Widget.EditText">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Menu item text color style for dark theme. -->
    <style name="ItemTextColor.Dark" parent="android:style/Widget.PopupMenu">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Floating Action Button (Fab) style for dark theme. -->
    <style name="Fab.Dark" parent="@style/Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">@color/niceGrey</item>
    </style>

</resources>
